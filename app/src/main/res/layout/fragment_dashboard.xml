<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.keamanan_rumah.sistemkeamananrumah.FragmentDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/background8"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="DASHBOARD"/>
        </LinearLayout>
        <!--No network available-->
        <LinearLayout
            android:id="@+id/llNoNetwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivNoNetwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:src="@mipmap/nonetwork"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvNoNetwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp"
                android:text="Tidak dapat terhubung ke server.\n"/>
        </LinearLayout>
        <!--End of no network available-->
        <LinearLayout
            android:id="@+id/llNetworkAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivActive"
                    android:src="@mipmap/user_active"
                    android:layout_width="128px"
                    android:layout_height="128px" />
                <TextView
                    android:id="@+id/tvActive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:textColor="#666"
                    android:textSize="20dp"
                    android:text="Total pengguna"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivBlocked"
                    android:src="@mipmap/user_blocked"
                    android:layout_width="128px"
                    android:layout_height="128px" />
                <TextView
                    android:id="@+id/tvBlocked"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:textColor="#666"
                    android:textSize="20dp"
                    android:text="Pengguna diblock"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivRecordToday"
                    android:src="@mipmap/today"
                    android:layout_width="128px"
                    android:layout_height="128px" />
                <TextView
                    android:id="@+id/tvRecordToday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:textColor="#666"
                    android:textSize="20dp"
                    android:text="Record hari ini"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivTotalRecord"
                    android:src="@mipmap/total_record"
                    android:layout_width="128px"
                    android:layout_height="128px" />
                <TextView
                    android:id="@+id/tvTotalRecord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:textColor="#666"
                    android:textSize="20dp"
                    android:text="Total record"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
