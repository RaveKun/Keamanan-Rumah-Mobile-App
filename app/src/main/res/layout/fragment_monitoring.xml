<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/background8"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="MONITORING"/>
        </LinearLayout>
        <!--No network available-->
        <LinearLayout
            android:id="@+id/llNoNetwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivNoNetwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:src="@mipmap/nonetwork"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvNoNetwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Tidak dapat terhubung ke server.\n"/>
        </LinearLayout>
        <!--End of no network available-->
        <LinearLayout
            android:id="@+id/llNetworkAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivStatusSensor"
                        android:src="@mipmap/perangkat_aktif"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Status Sensor"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvStatusSensor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Sensor Offline"
                            android:textAlignment="center"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </LinearLayout>
                <!--KANAN-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivDoorLock"
                        android:src="@mipmap/home_secure"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Status Pintu"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvDoorLock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Sensor Offline"
                            android:textAlignment="center"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivIndoor"
                        android:src="@mipmap/home_secure"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Indoor Sensor"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvIndoor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Sensor Offline"
                            android:textAlignment="center"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </LinearLayout>
                <!--KANAN-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivOutdoor"
                        android:src="@mipmap/home_secure"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Outdoor Sensor"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvOutdoor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:text="Sensor Offline"
                            android:textAlignment="center"
                            android:textStyle="italic"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
