<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.keamanan_rumah.sistemkeamananrumah.FragmentDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/background8"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="DASHBOARD"/>
        </LinearLayout>
        <!--No network available-->
        <LinearLayout
            android:id="@+id/llNoNetwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivNoNetwork"
                android:layout_width="256px"
                android:layout_height="256px"
                android:layout_marginTop="60dp"
                android:src="@mipmap/nonetwork"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tvNoNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="16dp"
                android:text="Tidak dapat terhubung ke server."/>
        </LinearLayout>
        <!--End of no network available-->
        <LinearLayout
            android:id="@+id/llNetworkAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivActive"
                        android:src="@mipmap/user_active"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="Total pengguna"/>
                    <TextView
                        android:id="@+id/tvActive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="0"/>
                </LinearLayout>
                <!--Kanan-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivBlocked"
                        android:src="@mipmap/user_blocked"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="Pengguna di block"/>
                    <TextView
                        android:id="@+id/tvBlocked"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <!--Kiri-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivRecordToday"
                        android:src="@mipmap/today"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="Record hari ini"/>
                    <TextView
                        android:id="@+id/tvRecordToday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="0"/>
                </LinearLayout>
                <!--Kanan-->
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/box"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivTotalRecord"
                        android:src="@mipmap/total_record"
                        android:layout_width="64px"
                        android:layout_height="64px" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="Total record"/>
                    <TextView
                        android:id="@+id/tvTotalRecord"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="fill_vertical"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAdminOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <!--Kiri-->
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/box"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivJumlahKoordinator"
                            android:src="@mipmap/jumlah_koordinator"
                            android:layout_width="64px"
                            android:layout_height="64px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="Jumlah Coordinator"/>
                        <TextView
                            android:id="@+id/tvJumlahKoordinator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="0"/>
                    </LinearLayout>
                    <!--Kanan-->
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/box"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivJumlahSibling"
                            android:src="@mipmap/jumlah_sobling"
                            android:layout_width="64px"
                            android:layout_height="64px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="Jumlah Sibling"/>
                        <TextView
                            android:id="@+id/tvJumlahSibling"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <!--Kiri-->
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/box"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivRequestBukaBlock"
                            android:src="@mipmap/request_buka_block"
                            android:layout_width="64px"
                            android:layout_height="64px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="Request buka block"/>
                        <TextView
                            android:id="@+id/tvRequestBukaBlock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="0"/>
                    </LinearLayout>
                    <!--Kanan-->
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/box"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivPerangkatAktif"
                            android:src="@mipmap/perangkat_aktif"
                            android:layout_width="64px"
                            android:layout_height="64px" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="Perangkat aktif"/>
                        <TextView
                            android:id="@+id/tvPerangkatAktif"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="fill_vertical"
                            android:textColor="#666"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
