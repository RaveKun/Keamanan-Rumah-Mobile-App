<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            app:srcCompat="@drawable/icon_verstaendnis"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistem Keamanan Rumah"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/txtPembimbing1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembimbing 1"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/txtNamaPembimbing1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Sugeng Supriyadi M.Kom"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtPembimbing2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembimbing 2"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/txtNamaPembimbing2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nunu Nugraha M.T"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/NamaPengembang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="By : Erwin Ligar Nugraha"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/Versi"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:text="Sistem Keamanan Rumah 1.0"
            android:textStyle="italic"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
